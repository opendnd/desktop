{
  "title": "Disease",
  "description": "Diseases are the illnesses and conditions that affect the inhabitants of your world.",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "abstract": {
      "title": "abstract",
      "type": "boolean"
    },
    "abstractProperties": {
      "title": "abstract Properties",
      "type": "string"
    },
    "condition": {
      "enum": [
        "acute",
        "chronic"
      ],
      "title": "condition",
      "type": "string"
    },
    "damage": {
      "items": {
        "default": "d4",
        "enum": [
          "d4",
          "d6",
          "d8",
          "d10",
          "d12",
          "d20",
          "d100"
        ],
        "type": "string"
      },
      "title": "damage",
      "type": "array"
    },
    "derivation": {
      "additionalProperties": false,
      "properties": {
        "uuid": {
          "title": "uuid",
          "type": "string"
        }
      },
      "propertyOrder": [
        "uuid"
      ],
      "title": "derivation",
      "type": "object"
    },
    "exhaustion": {
      "title": "exhaustion",
      "type": "number"
    },
    "immunity": {
      "additionalProperties": false,
      "properties": {
        "gene": {
          "title": "gene",
          "type": "string"
        },
        "trait": {
          "title": "trait",
          "type": "string"
        }
      },
      "propertyOrder": [
        "gene",
        "trait"
      ],
      "title": "immunity",
      "type": "object"
    },
    "incubation": {
      "additionalProperties": false,
      "properties": {
        "dice": {
          "enum": [
            "d4",
            "d6",
            "d8",
            "d10",
            "d12",
            "d20",
            "d100"
          ],
          "title": "dice",
          "type": "string"
        },
        "time": {
          "title": "time",
          "type": "number"
        }
      },
      "propertyOrder": [
        "time",
        "dice"
      ],
      "title": "incubation",
      "type": "object"
    },
    "name": {
      "title": "name",
      "type": "string"
    },
    "notes": {
      "title": "notes",
      "type": "string"
    },
    "pathogen": {
      "enum": [
        "bacterium",
        "fungus",
        "protist",
        "virus"
      ],
      "title": "pathogen",
      "type": "string"
    },
    "properties": {
      "title": "properties",
      "type": "string"
    },
    "resistance": {
      "enum": [
        "acid",
        "bludgeoning",
        "cold",
        "fire",
        "force",
        "lightning",
        "necrotic",
        "piercing",
        "poison",
        "psychic",
        "radiant",
        "slashing",
        "thunder"
      ],
      "title": "resistance",
      "type": "string"
    },
    "savingThrow": {
      "enum": [
        "charisma",
        "constitution",
        "dexterity",
        "intelligence",
        "strength",
        "wisdom"
      ],
      "title": "saving Throw",
      "type": "string"
    },
    "transmission": {
      "enum": [
        "air",
        "animal",
        "environmental",
        "food",
        "vector"
      ],
      "title": "transmission",
      "type": "string"
    },
    "trigger": {
      "title": "trigger",
      "type": "string"
    },
    "triggerTime": {
      "title": "trigger Time",
      "type": "number"
    },
    "type": {
      "enum": [
        "autoimmune",
        "cognitive",
        "congenital",
        "dietary",
        "infectious"
      ],
      "title": "type",
      "type": "string"
    },
    "uuid": {
      "title": "uuid",
      "type": "string"
    },
    "vulnerability": {
      "enum": [
        "acid",
        "bludgeoning",
        "cold",
        "fire",
        "force",
        "lightning",
        "necrotic",
        "piercing",
        "poison",
        "psychic",
        "radiant",
        "slashing",
        "thunder"
      ],
      "title": "vulnerability",
      "type": "string"
    }
  },
  "propertyOrder": [
    "uuid",
    "name",
    "abstract",
    "abstractProperties",
    "derivation",
    "type",
    "condition",
    "pathogen",
    "transmission",
    "incubation",
    "exhaustion",
    "resistance",
    "vulnerability",
    "immunity",
    "savingThrow",
    "damage",
    "trigger",
    "triggerTime",
    "notes",
    "properties"
  ],
  "required": [
    "name",
    "uuid"
  ],
  "type": "object"
}